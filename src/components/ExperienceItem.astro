---
export interface Props {
    date: string
    title: string
    description: string
}
const { date, title, description } = Astro.props
---
<li class="mb-10 ms-4">
    <div class="text-white absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
    <time class="mb-1 text-sm font-normal leading-none text-sky-200/70">
        {date}
    </time>
    <h3 class="text-lg font-semibold text-yellow-200 mt-2">
        {title}
    </h3>
    <h3 class="mb-4 text-base font-normal text-gray-200 text-pretty" >
        {description}
    </h3>
</li>