---
export interface Props {
    date: string
    title: string
}
const { date, title } = Astro.props
---
<li class="mb-10 ms-4">
    <div class="text-white absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
    <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">
        {date}
    </time>
    <h3 class=" text-white text-lg font-semibold text-gray-900 dark:text-white">
        {title}
    </h3>
</li>